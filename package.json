{
  "name": "git-dir",
  "version": "1.0.0",
  "description": "Run git commands in all git subdirectories",
  "bin": {
    ".": "./lib/index.js",
    "git-dir": "./lib/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "build": "tsc -p .",
    "local": "npm i -g && git-dir",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "status": "ts-node src/index.ts status --dir 'C:\\Users\\kylemit\\Documents\\code\\github'"
  },
  "repository": "github:KyleMit/git-for-each",
  "keywords": [
    "cli",
    "git"
  ],
  "author": "KyleMit",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KyleMit/git-for-each/issues"
  },
  "homepage": "https://github.com/KyleMit/git-for-each#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^17.0.6",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
